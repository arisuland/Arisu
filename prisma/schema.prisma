// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ProjectRelation {
  Organization
  User
}

enum EntityRelation {
  Organization
  Project
  User
}

model User {
  organizations Organization[]
  projects      Project[]
  username      String
  email         String
  flags         Int    @default(0)
  salt          String
  id            String @id

  @@map(name: "users")
}

model Project {
  description String?
  audit_logs  AuditLogs[]
  updatedAt   DateTime   @updatedAt @map(name: "updated_at")
  createdAt   DateTime   @map(name: "created_at")
  webhooks    Webhooks[]
  relation    ProjectRelation
  ownerID     String     @map(name: "owner_id")
  owner       User       @relation(fields: [ownerID], references: [id])
  id          String     @id

  @@map(name: "projects")
}

model Organization {
  description String?
  updatedAt   DateTime   @updatedAt @map(name: "updated_at")
  createdAt   DateTime   @map(name: "created_at")
  webhooks    Webhooks[]
  owner_id    String
  members     User[]
  id          String @id

  @@map(name: "organizations")
}

model AuditLogs {
  target_id  String
  relation   EntityRelation
  type       Int
  id         String @id

  @@map(name: "audit_logs")
}

model Webhooks {
  serialization String   @default("application/json")
  updatedAt     DateTime @updatedAt @map(name: "updated_at")
  createdAt     DateTime @map(name: "created_at")
  relation      EntityRelation
  secret        String?
  name          String
  id            String   @id

  @@map(name: "webhooks")
}
